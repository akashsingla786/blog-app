<body>  

    <h1>Edit Blog</h1>

    <form action="/blogs/<%=foundblog._id%>?_method=PATCH" method="POST">
        <fieldset>
            <label for="comment">Blog</label>
            <br>
            <textarea name="blog" id="blog" cols="20" rows="4"><%=foundblog.desc%></textarea>
            <br>
            <button type="submit">Save</button>
        </fieldset>
    </form>

    
